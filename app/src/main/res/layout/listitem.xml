<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_outline_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewImportant" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_change_history_black_24dp"
        android:layout_alignBottom="@+id/imageViewImportant"
        android:layout_toEndOf="@+id/imageViewImportant"
        android:id="@+id/imageViewTodo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewTodo"
        android:id="@+id/imageViewIdea"
        android:contentDescription="Todo" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/txtDescription" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle1"
        android:textSize="30sp"
        android:layout_below="@+id/imageViewImportant"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>